{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prConcurrentLimit": 3,
  "argocd": {
    "fileMatch": ["\\.yaml$"]
  },
  "additionalBranchPrefix": "{{parentDir}}-",
  "packageRules": [
    {
      "matchPaths": ["argocd-manifests/dev/**"],
      "groupName": "dev environment"
    },
    {
      "matchPaths": ["argocd-manifests/staging/**"],
      "groupName": "staging environment"
    },
    {
      "matchPaths": ["argocd-manifests/prod/**"],
      "groupName": "prod environment"
    }
  ]
}
